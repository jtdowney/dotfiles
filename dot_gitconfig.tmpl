[user]
	name = John Downey
	email = {{ .email }}
[color]
	ui = auto
[alias]
	ci = commit
	co = checkout
	st = status
	staged = diff --cached
	unstaged = diff
	up = pull --rebase --autostash
[push]
	default = current
[core]
	autocrlf = input
[rebase]
	autosquash = true
	autoStash = true
[pull]
	rebase = true
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[init]
	defaultBranch = main
[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta
[interactive]
  diffFilter = delta --color-only
[delta]
  features = side-by-side line-numbers decorations
  whitespace-error-style = 22 reverse
[delta "decorations"]
  commit-decoration-style = bold yellow box ul
  file-style = bold yellow ul
  file-decoration-style = none
